
<div class="categories-navbar">
    <div class="new-category-modifier">
        <%= link_to categories_path do %>
            <i class="fa-solid fa-arrow-left"></i>
        <%end%>
        <h3> New Category</h3>
    </div>
</div>
<div class="form-wrapper">
  <%= form_with model: category, url: categories_url, method: :post, local: true, scope: :category, class: "food-form" do |f| %>
    <div class="form-item">
      <%= f.label :name, class: "label-name" %><br>
      <%= f.text_field :name, class: "input-name" %>
    </div>
    <div class="form-item">
      <%= f.label :icon, class: "label-name" %><br>
      <%= f.text_field :icon, class: "input-name" %>
    </div>

    <%= f.submit "Save", class: "submit-button" %>
  <% end %>
</div>
